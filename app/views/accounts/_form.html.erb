<div class="bg-white w-full max-w-lg rounded-xl shadow-lg p-6 relative">
  <h2 class="text-lg font-semibold mb-4"><%=t(".title") %></h2>
  <%= form_with model: account, local: true, class: "space-y-4 max-w-md" do |f| %>
    <div>
      <%= f.label :name, t(".name"), class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :name, class: "mt-1 block w-full border-gray-300 rounded shadow-sm" %>
      <%= field_error(account, :name) %>
    </div>

    <div>
      <%= f.label :balance_currency, t(".balance_currency"), class: "block text-sm font-medium text-gray-700" %>
      <%= f.select :balance_currency, options_for_select(currency_options_for_select, @account.balance_currency), {}, class: "mt-1 block w-full border-gray-300 rounded shadow-sm" %>
      <%= field_error(account, :balance_currency) %>
    </div>

    <div>
      <%= f.submit t(".submit"), class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>
    </div>
  <% end %>
  <%= link_to "âœ•", "#", data: { action: "click->modal#close" },
          class: "absolute top-3 right-3 text-gray-400 hover:text-gray-600 text-xl" %>
</div>