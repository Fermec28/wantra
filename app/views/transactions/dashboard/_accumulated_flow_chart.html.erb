<div class="bg-white rounded-2xl shadow p-6">
  <h2 class="text-sm font-semibold text-gray-600 mb-4">
    Flujo acumulado de ingresos y gastos (<%= @period.titleize %>)
  </h2>

  <% if @accumulated_chart_data.any? %>
    <%= line_chart @accumulated_chart_data,
          height: "300px",
          library: {
            legend: { position: "top" },
            scales: {
              x: {
                type: "time",
                time: { unit: (@period == "week" ? "day" : "month") }
              },
              y: {
                beginAtZero: true
              }
            },
            elements: {
              line: { tension: 0.3 }
            }
          } %>
  <% else %>
    <p class="text-sm text-gray-500">No hay transacciones registradas en este per√≠odo.</p>
  <% end %>
</div>