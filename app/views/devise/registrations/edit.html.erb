<%= turbo_frame_tag "modal" do %>
  <div class="max-w-md mx-auto mt-12 bg-white p-8 rounded-2xl shadow">
    <h2 class="text-2xl font-bold mb-6 text-gray-800 text-center">Editar perfil</h2>

    <% if resource.errors.any? %>
      <div class="bg-red-100 text-red-700 px-4 py-2 rounded mb-4 text-sm">
        <ul class="list-disc pl-5">
          <% resource.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, class: "space-y-4") do |f| %>
      <div>
        <%= f.label :email, "Email", class: "block text-sm font-medium text-gray-700" %>
        <%= f.email_field :email,
              class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <hr class="my-4">

      <div>
        <%= f.label :password, "Nueva contraseña", class: "block text-sm font-medium text-gray-700" %>
        <%= f.password_field :password, autocomplete: "new-password",
              class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
        <p class="text-xs text-gray-500 mt-1">Dejar en blanco si no la querés cambiar</p>
      </div>

      <div>
        <%= f.label :password_confirmation, "Confirmar nueva contraseña", class: "block text-sm font-medium text-gray-700" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password",
              class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <div>
        <%= f.label :current_password, "Contraseña actual", class: "block text-sm font-medium text-gray-700" %>
        <%= f.password_field :current_password, autocomplete: "current-password",
              class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500", required: true %>
        <p class="text-xs text-gray-500 mt-1">Necesaria para confirmar los cambios</p>
      </div>

      <div>
        <%= f.submit "Actualizar", class: "w-full bg-blue-600 text-white py-2 px-4 rounded hover:bg-blue-700 transition" %>
      </div>
    <% end %>

    <div class="text-sm text-center text-gray-500 mt-4">
      <%= link_to "Cancelar mi cuenta", registration_path(resource_name), data: { turbo_method: :delete, turbo_confirm: "¿Estás seguro? Esta acción no se puede deshacer." }, class: "text-red-600 hover:underline" %>
    </div>
  </div>
<% end %>